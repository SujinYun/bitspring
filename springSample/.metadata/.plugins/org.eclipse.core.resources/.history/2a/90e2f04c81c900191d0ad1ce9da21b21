<script type="text/javascript">
function deleteBbs( seq ) {
	location.href = "bbsdelete.do?seq=" + seq;	// 삭제
}
function updateBbs( seq ) {
	location.href = "bbsupdate.do?seq=" + seq;	// 수정
}

