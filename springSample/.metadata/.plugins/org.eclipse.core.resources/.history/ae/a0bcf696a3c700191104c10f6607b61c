<!-- 4. Ajax -->
<form method="get">
아이디:<input type="text" id="checkid">
<button type="button" id="_check" onclick="idcheck()">id체크</button>

</form>

<script type="text/javascript">
function idcheck() {
// 	alert("idcheck()");
	$.ajax({
		url:"idcheck.do",
		type:"get",
		data:"id=" + $("#checkid").val(),
		success:function(data){
		//	alert("success");
			alert(data);
		},
		error:function(r, s, err){
			alert("error");
		}
	});
}
</script>

<br><br>

<!-- 5 -->
<form method="post">
이름:<input type="text" id="_name"><br>
전화:<input type="text" id="_phone"><br>
이메일:<input type="text" id="_email"><br>
생년월일:<input type="text" id="_birth"><br>
<button type="button" id="account">account</button>
</form>

<script type="text/javascript">
$(document).ready(function(){
	
	$("#account").click(function(){
// 		alert("account click");
		
		var mydata  = {
				name:$("#_name").val(),
				tel:$("#_phone").val(),
				email:$("#_email").val(),
				birth:$("#_birth").val(),
		};
		$.ajax({
			url:"account.do",
			data:mydata,
			type:'post',
			dataType:'json',
			async:true,
			success:function(resp){
				alert("success");
			},
			error:function(){
				alert("error");
			}
		});
	});
	
});


</script>






